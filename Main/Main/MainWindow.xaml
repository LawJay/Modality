<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="Modality V.1.0" Height="800" Width="1200" WindowStyle="None">
    <Grid HorizontalAlignment="Left" Height="800" VerticalAlignment="Top" Width="1200">
        <Image x:Name="keyBtn" HorizontalAlignment="Left" Height="810" VerticalAlignment="Top" Width="400" Source="KeyboardBtn.jpg" Margin="0,-10,0,0" MouseDown="KeyClick" MouseEnter="keyBtn_MouseEnter" MouseLeave="keyBtn_MouseLeave"/>
        <Image x:Name="speechBtn" HorizontalAlignment="Left" Height="810" Margin="400,-10,0,0" VerticalAlignment="Top" Width="400" Source="MicBtn.jpg" MouseDown="MicClick" MouseEnter="speechBtn_MouseEnter" MouseLeave="speechBtn_MouseLeave"/>
        <Image x:Name="joyBtn" HorizontalAlignment="Left" Height="810" Margin="800,-10,0,0" VerticalAlignment="Top" Width="400" Source="JoyStickBtn.jpg" MouseDown="JoyClick" MouseEnter="joyBtn_MouseEnter" MouseLeave="joyBtn_MouseLeave"/>
        <Menu HorizontalAlignment="Left" Height="41" VerticalAlignment="Top" Width="1190">
            <Button Content="Load" Width="75" Click="Button_Click"/>
        </Menu>
    </Grid>



</Window>
    
