<Window x:Class="Main.Speech"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="Speech" Height="300" Width="300">
    <Grid Background="#FF17F900">
        <Button Name ="b1" Content="Start Listening" HorizontalAlignment="Left" Margin="101,239,0,0" VerticalAlignment="Top" Width="84" Click="Button_Click_1"/>
        <TextBox x:Name="cmdText" HorizontalAlignment="Left" Height="19" Margin="56,52,0,0" TextWrapping="Wrap" Text="Enter Keyword to activate command" VerticalAlignment="Top" Width="184" FontSize="11"/>
        <Button Content="Click Me" HorizontalAlignment="Left" Margin="110,113,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <Label Content="Click Button then Press key to be activated by command" HorizontalAlignment="Left" Margin="40,76,0,0" VerticalAlignment="Top" Width="242" Height="32" FontSize="8"/>
        <Label Content="Speech Commands" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="24"/>
    </Grid>
</Window>
